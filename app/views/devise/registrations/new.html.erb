<br>
<div class="container">
<div class="row">
  <h2 class="col-md-6 col-md-offset-1">Sign up</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="form-group col-md-6 col-md-offset-1">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>
</div>
  <div class="row">
    <div class="form-group col-md-6 col-md-offset-1">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
  </div>
</div>
  <div class="row">
    <div class="form-group col-md-6 col-md-offset-1">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
  </div>
</div>
  <div class="row">
    <div class="form-group col-md-6 col-md-offset-1">
    <%= f.submit "Sign up", class: "btn btn-outline" %>
  </div>
</div>
<% end %>
<div class="row">
  <div class="form-group col-md-6 col-md-offset-1">
  <%= render "devise/shared/links" %>
</div>
</div>
